{
    "name": "kimbar",
    "description": "Kim Bar - A flashcard battle adventure game for bar exam prep",
    "version": "0.1.0",
    "type": "module",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/phaserjs/template-vite-ts.git"
    },
    "author": "Phaser Studio <support@phaser.io> (https://phaser.io/)",
    "license": "MIT",
    "licenseUrl": "http://www.opensource.org/licenses/mit-license.php",
    "bugs": {
        "url": "https://github.com/phaserjs/template-vite-ts/issues"
    },
    "homepage": "https://github.com/phaserjs/template-vite-ts#readme",
    "scripts": {
        "dev": "node log.js dev & vite --config vite/config.dev.mjs",
        "build": "node log.js build & vite build --config vite/config.prod.mjs",
        "dev-nolog": "vite --config vite/config.dev.mjs",
        "build-nolog": "vite build --config vite/config.prod.mjs",
        "build:chars": "node scripts/build-characters.js",
        "build:levels": "node scripts/build-levels.js",
        "build:content": "npm run build:chars && npm run build:levels",
        "build:asset-index": "node scripts/build-asset-index.mjs",
        "sync:public": "node scripts/sync-public.mjs",
        "prepare:content": "npm run fetch-vendor && npm run validate && npm run build:chars && npm run gen:sprites && npm run build:asset-index && npm run sync:public",
        "validate": "node scripts/validate.js",
        "check-boundaries": "node scripts/check-boundaries.js",
        "verify": "node scripts/verify.js",
        "predev": "npm run prepare:content",
        "prebuild": "npm run prepare:content",
        "fetch-vendor": "node scripts/fetch-vendor.mjs",
        "search:assets": "node scripts/search-assets.mjs",
        "assets:search": "node scripts/assets-search.mjs",
        "gen:sprites": "node scripts/generate-sprites.mjs"
    },
    "devDependencies": {
        "sharp": "^0.34.5",
        "typescript": "~5.7.2",
        "vite": "^6.3.1"
    },
    "dependencies": {
        "ajv": "^8.17.1",
        "inkjs": "^2.3.2",
        "phaser": "^3.90.0",
        "terser": "^5.39.0"
    }
}
