{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "PlacementDraft.schema.json",
  "title": "PlacementDraft",
  "description": "Draft placement output for props generated from missing asset specs",
  "type": "object",
  "required": ["schemaVersion", "sourceSpec", "placements"],
  "properties": {
    "schemaVersion": {
      "type": "integer",
      "minimum": 1
    },
    "sourceSpec": {
      "type": "string"
    },
    "placements": {
      "type": "object",
      "additionalProperties": {
        "type": "array",
        "items": {
          "type": "object",
          "required": ["type", "id", "zone", "x", "y", "properties"],
          "properties": {
            "type": {
              "type": "string",
              "enum": ["Prop"]
            },
            "id": {
              "type": "string",
              "pattern": "^prop\\.[a-z0-9_]+(\\.[a-z0-9_]+)*$"
            },
            "zone": {
              "type": "string"
            },
            "x": {
              "type": "integer",
              "minimum": 0
            },
            "y": {
              "type": "integer",
              "minimum": 0
            },
            "properties": {
              "type": "object",
              "required": ["sprite"],
              "properties": {
                "sprite": {
                  "type": "string"
                },
                "collision": {
                  "type": "boolean"
                }
              }
            }
          }
        }
      }
    }
  }
}
