{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "RoomEntry.schema.json",
  "title": "RoomEntry",
  "description": "Registry entry for a room/level",
  "type": "object",
  "required": ["id", "ldtkUrl"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9][a-z0-9_]*$",
      "description": "Unique room identifier"
    },
    "ldtkUrl": {
      "type": "string",
      "pattern": "^/content/ldtk/",
      "description": "URL path to the LDtk JSON file"
    },
    "displayName": {
      "type": "string",
      "description": "Human-readable room name"
    },
    "spawns": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Named spawn points in this room"
    }
  },
  "additionalProperties": false
}
